{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "types": [
      "node",
      "webpack-env"
    ],
    "paths": {
      "office-ui-fabric-react/lib/*": [
        "node_modules/office-ui-fabric-react/lib/*"
      ]
    },
    "lib": [
      "es2015",
      "es2015.collection",
      "dom"
    ]
  },
  "include": [
    "src"
  ]
}